# .env.example
# Copier vers .env et remplir les valeurs

# Application
SECRET_KEY=change-me-use-openssl-rand-hex-32
DEBUG=false

# Keycloak OIDC
KEYCLOAK_URL=https://keycloak.university.edu
KEYCLOAK_REALM=university
KEYCLOAK_CLIENT_ID=captive-portal
KEYCLOAK_CLIENT_SECRET=your-client-secret-here

# Keycloak Admin (pour sync sessions)
KEYCLOAK_ADMIN_CLIENT_ID=admin-cli
KEYCLOAK_ADMIN_CLIENT_SECRET=your-admin-secret-here

# Redis
REDIS_URL=redis://localhost:6379/0

# Session
SESSION_TIMEOUT=28800

# Méthode d'autorisation: nftables ou radius_coa
AUTH_METHOD=nftables

# nftables config
NFT_TABLE=inet
NFT_CHAIN=filter
NFT_SET=allowed_macs

# RADIUS CoA (si AUTH_METHOD=radius_coa)
RADIUS_NAS_IP=10.0.0.1
RADIUS_SECRET=radius-secret
RADIUS_COA_PORT=3799

# URLs
CALLBACK_URL=http://portal.university.edu/callback
SUCCESS_REDIRECT_URL=https://www.google.com

# Interface réseau
NETWORK_INTERFACE=eth0

# ============================================
# PERSONNALISATION DU THEME
# ============================================

# Identité
THEME_COMPANY_NAME=Université du Bénin
THEME_PORTAL_TITLE=Portail WiFi
THEME_PORTAL_SUBTITLE=Authentification réseau

# Logo (chemin relatif /static ou URL complète)
THEME_LOGO_URL=/static/logo.png
THEME_LOGO_WIDTH=120px
THEME_FAVICON_URL=/static/favicon.ico

# Couleurs
THEME_PRIMARY_COLOR=#1a365d
THEME_PRIMARY_HOVER=#2d5a87
THEME_ACCENT_COLOR=#48bb78

# Fond (gradient, solid, image)
THEME_BACKGROUND_TYPE=gradient
THEME_BACKGROUND_GRADIENT_START=#1a365d
THEME_BACKGROUND_GRADIENT_END=#2d5a87
# THEME_BACKGROUND_IMAGE_URL=/static/background.jpg

# Textes
THEME_LOGIN_BUTTON_TEXT=Se connecter avec mon compte universitaire
THEME_SUCCESS_MESSAGE=Tu es maintenant connecté au réseau WiFi.
THEME_FOOTER_TEXT=En te connectant, tu acceptes les conditions d'utilisation.

# Liens (optionnel)
# THEME_TERMS_URL=https://university.edu/cgu
# THEME_HELP_URL=https://university.edu/support

# Langue
THEME_LANG=fr
