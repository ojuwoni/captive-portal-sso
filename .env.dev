# .env.dev
# Configuration pour test local avec docker-compose.dev.yml

# Application
SECRET_KEY=dev-secret-key-not-for-production
DEBUG=true
DEV_MODE=true

# Keycloak OIDC (valeurs correspondant Ã  keycloak-realm.json)
# Utiliser l'IP de l'hote pour acces externe
KEYCLOAK_URL=http://192.168.0.11:8080
KEYCLOAK_REALM=dev
KEYCLOAK_CLIENT_ID=captive-portal
KEYCLOAK_CLIENT_SECRET=dev-secret-change-in-prod

# Keycloak Admin (pour sync sessions)
KEYCLOAK_ADMIN_CLIENT_ID=admin-cli
KEYCLOAK_ADMIN_CLIENT_SECRET=admin-cli-secret

# Redis
REDIS_URL=redis://localhost:6379/0

# Session
SESSION_TIMEOUT=28800

# Methode d'autorisation: nftables ou radius_coa
# En mode dev, nftables ne fera rien car pas de vraie interface reseau
AUTH_METHOD=nftables

# nftables config
NFT_TABLE=inet
NFT_CHAIN=filter
NFT_SET=allowed_macs

# URLs - Utiliser l'IP de l'hote pour acces externe
CALLBACK_URL=http://192.168.0.11:8000/callback
SUCCESS_REDIRECT_URL=https://www.google.com

# Interface reseau (pas utilise en mode dev)
NETWORK_INTERFACE=eth0

# ============================================
# PERSONNALISATION DU THEME
# ============================================

# Identite
THEME_COMPANY_NAME=Test Local
THEME_PORTAL_TITLE=Portail WiFi Dev
THEME_PORTAL_SUBTITLE=Environnement de test

# Logo
THEME_LOGO_URL=/static/logo.png
THEME_LOGO_WIDTH=120px
THEME_FAVICON_URL=/static/favicon.ico

# Couleurs
THEME_PRIMARY_COLOR=#00A651
THEME_PRIMARY_HOVER=#008C44
THEME_ACCENT_COLOR=#48bb78

# Fond
THEME_BACKGROUND_TYPE=gradient
THEME_BACKGROUND_GRADIENT_START=#004D25
THEME_BACKGROUND_GRADIENT_END=#00A651

# Textes
THEME_LOGIN_BUTTON_TEXT=Se connecter (Test)
THEME_SUCCESS_MESSAGE=Connexion reussie ! Environnement de test.
THEME_FOOTER_TEXT=Environnement de developpement - Ne pas utiliser en production

# Langue
THEME_LANG=fr
